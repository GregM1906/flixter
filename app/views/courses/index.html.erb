<br />

<div class="navbar-brand col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
    	<hr>
      	<% @courses.each do |course| %>
		<div class="frosty col-10 offset-1">
        <h2 class="text-center">
		<%= link_to course.title, course_path(course) %>
		</h2>
			
		<h6 class="course_description">
		<%= course.description %>
		</h6>
		<br />
        <%= image_tag course.image, class:'img-fluid' %>
		<br />
		<br />
		<%= link_to 'More details...', course_path(course), class: 'btn btn-primary btn-large' %>
		<br />
		<br />
		<hr>
    	</div>
      <% end %>
      
  <br class="clr" />
</div>