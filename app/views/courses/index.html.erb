<div class="navbar-brand col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
    <hr />
      <% @courses.each do |course| %>
        <h2 class="text-center">
          <%= link_to course.title, course_path(course) %>
          <%= image_tag @course.image, class:'img-fluid' %>
        </h2>
      <% end %>
  
    <br />
    
    <div class="row">
      <% @courses.each do |course| %>
        <h2 class="text-center"><%= course.title %></h2>
        <br />
        <div class="col-sm-8 col-12">
          <%= course.description %>
        </div>
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'More details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      <% end %>
    </div>
      
  <br class="clr" />
</div>