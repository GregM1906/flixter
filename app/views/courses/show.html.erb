<div class="frosty col-10 offset-1">
	<br />
	<h3 class="text-truncate"><%= @course.title %>       </h3>
	<br />
	<h6 class="course_description"><%= @course.description %></h6>
	<br />
	<br />
	<%= image_tag @course.image, class:'img-fluid', :size => '100X100'%>
	<br />
	<div class="course_description">
		<div class="col-sm-4 col-12">
			<span class="badge badge-default">
			<%= number_to_currency @course.cost %>
			</span>
			<% if current_user && current_user == @course.user %>
			<br />
			<br />
			<%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-primary btn-large' %>
			<% end %>
		</div>
		<h3></h3>
	</div>

	<div class="col-12">
		<% @course.sections.each do |section| %>
		<div class="section">
			<%= section.title %>
			<% section.lessons.each do |lesson| %>
			<div class="lesson">
				<%= link_to lesson_path(lesson) do %>
				<b><%= lesson.title %></b>
				-
				<%= lesson.subtitle %>
				<% end %>
			</div>
			<% end %>
		</div>
		<% end %>
	</div>
</div>